{% extends('base.html.twig') %}

{% block title %}

<title>Listado de Products </title>

{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %}
<div class="p-3 mb-2 bg-dark" style=".bg-dark">
<div class="text-center" style="color:#fff"><h1> Product<h1></div>
<table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Product Scale</th>
                <th>Product Vendor</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Buy Price</th>
                <th>MSRP</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for products in lista %}
            <tr>
            <td>{{ loop.index }}</td>
            <td>{{ products.productname }}</td>
            <td>{{ products.productscale }}</td>
            <td>{{ products.productvendor }}</td>
            <td>{{ products.productdescription }}</td>
            <td>{{ products.quantityinstock }}</td>
            <td>{{ products.buyprice }}</td>
            <td>{{ products.msrp }}</td>
             <td>
                <button class="btn btn btn-primary">Update</button>
                <button class="btn btn-danger"> Delete</button>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}