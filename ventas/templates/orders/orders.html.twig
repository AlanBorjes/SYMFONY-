{% extends('base.html.twig') %}

{% block title %}

<title>Listado de Orders </title>

{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %}
<div class="p-3 mb-2 bg-dark" style=".bg-dark">
<div class="text-center" style="color:#fff"><h1> Orders<h1></div>
<table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Order Date</th>
                <th>Required Date</th>
                <th>Shipped Date</th>
                <th>Status</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orders in lista %}
            <tr>
            <td>{{ loop.index }}</td>
            <td>{{ orders.orderdate }}</td>
            <td>{{ orders.requireddate }}</td>
            <td>{{ orders.shippeddate }}</td>
            <td>{{ orders.status }}</td>
            <td>{{ orders.comments }}</td>
             <td>
                <button class="btn btn btn-primary">Update</button>
                <button class="btn btn-danger"> Delete</button>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}