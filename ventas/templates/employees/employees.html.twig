{% extends('base.html.twig') %}

{% block title %}

<title>Listado de Employees</title>

{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %}
<div class="p-3 mb-2 bg-dark" style=".bg-dark">
<div class="text-center" style="color:#fff"><h1> Employees<h1></div>
<table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Employee Name</th>
                <th>Extension</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employees in lista %}
            <tr>
            <td>{{ loop.index }}</td>
            <td>{{ employees.lastname }} {{ employees.firstname }}</td>
            <td>{{ employees.extension }}</td>
            <td>{{ employees.email }}</td>
            <td>{{ employees.jobtitle }}</td>
            <td>
                <button class="btn btn btn-primary">Update</button>
                <button class="btn btn-danger"> Delete</button>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}